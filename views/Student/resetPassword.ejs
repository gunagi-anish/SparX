<%- include('../Includes/begin.ejs') %>
<%- include('../Includes/navbar.ejs') %>

<div class="container pt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow p-4 mb-5 bg-white rounded">
                <div class="forgot p-3">
                    <h2 class="text-center text-primary">Reset Your Password</h2>
                    <p class="text-center">Change your password. Make sure it's strong and safe!</p>
                    <p class="text-center text-danger">NOTE: The link will expire in 20 minutes.</p>
                </div>
                <%- include('../Includes/messages') %>
                
                <form class="card" role="form" method="POST" action="/student/resetpassword?_method=PUT">
                    <div class="card-body">
                        <div class="form-group">
                            <label for="password">Enter your new password</label>
                            <input class="form-control" type="password" name="password" id="password" required
                                placeholder="Enter a new password">
                            <small class="form-text text-muted">Make sure your password is strong.</small>
                        </div>
                        <div class="form-group">
                            <label for="confirm-password">Confirm your password</label>
                            <input class="form-control" type="password" name="confirmPass" id="confirmPass" required
                                placeholder="Re-enter your new password">
                            <small class="form-text text-muted">Confirm your password to avoid errors.</small>
                        </div>
                    </div>
                    <input type="hidden" class="hide" name="resetLink" id="resetLink" value="<%= resetLink %>">
                    <button class="btn btn-primary btn-block" type="submit">Change Password</button>
                </form>
                <hr>
                <div class="text-center">
                    <button class="btn btn-danger" onclick="location.href = '/student/login'">Back to Login</button>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../Includes/end.ejs') %>
