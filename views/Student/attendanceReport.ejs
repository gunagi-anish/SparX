<%- include('../Includes/begin.ejs') %>
<%- include('../Includes/student_nav.ejs') %>

<section id="content-wrapper">
    <main role="main" class="pt-5 main">
        <div class="main-content">
            <div class="header pb-4 pb-sm-8 pt-5 pt-lg-8 d-flex align-items-center"
                style="height: 100px; background-size: cover; background-position: center top;">
            </div>
            <div class="container-fluid mt--7">
                <div class="row">
                    <div class="col-xl-12 order-xl-1">
                        <div class="card bg-secondary shadow">
                            <div class="card-header bg-white border-0">
                                <div class="row align-items-center">
                                    <div class="col-8">
                                        <h3 class="mb-0">Attendance Report</h3>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body">
                                <h6 class="form-control-label mb-4">
                                    <b>NAME:</b> <%= studentData.s_name %> &nbsp;&nbsp;|&nbsp;&nbsp;
                                    <b>SEMESTER:</b> <%= semester %>
                                </h6>

                                <!-- Overall Attendance Summary -->
                                <div class="row mb-4">
                                    <% attendanceStats.forEach(function(course) { %>
                                        <div class="col-lg-4 col-md-6 mb-4">
                                            <div class="card">
                                                <div class="card-body">
                                                    <h5 class="card-title"><%= course.courseName %> (<%= course.courseId %>)</h5>
                                                    <div class="progress mb-3" style="height: 20px;">
                                                        <div class="progress-bar <%= course.percentage >= 75 ? 'bg-success' : 'bg-danger' %>" 
                                                             role="progressbar" 
                                                             style="width: <%= course.percentage %>%"
                                                             aria-valuenow="<%= course.percentage %>" 
                                                             aria-valuemin="0" 
                                                             aria-valuemax="100">
                                                            <%= course.percentage %>%
                                                        </div>
                                                    </div>
                                                    <p class="card-text">
                                                        Classes Attended: <%= course.attendedClasses %> / <%= course.totalClasses %>
                                                        <% if (course.percentage < 75) { %>
                                                            <br>
                                                            <small class="text-danger">
                                                                * Attendance below 75% threshold
                                                            </small>
                                                        <% } %>
                                                    </p>
                                                </div>
                                            </div>
                                        </div>
                                    <% }); %>
                                </div>

                                <!-- Action Buttons -->
                                <div class="row mt-4">
                                    <div class="col-12">
                                        <a href="/student/selectAttendance" class="btn btn-primary">
                                            View Detailed Attendance
                                        </a>
                                        <a href="/student/attendance-report/download" class="btn btn-success">
                                            <i class="fa fa-download"></i> Download Report
                                        </a>
                                        <a href="/student/dashboard" class="btn btn-secondary">
                                            Back to Dashboard
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</section>

<%- include('../Includes/student_end.ejs') %> 