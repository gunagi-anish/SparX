<%- include('../../Includes/begin.ejs') %>

<link rel="stylesheet" href="../../CSS/admin-dashboard.css">

<div class="container-fluid">
    <div id="wrapper">
        <%- include('../../Includes/admin_nav.ejs') %>

        <section id="content-wrapper">
            <main role="main" class="pt-5 main">
                <div class="main-content">
                    <div class="header pb-4 pb-sm-8 pt-5 pt-lg-8 d-flex align-items-center"
                        style="height: 100px; background-color: #f8f9fa; border-bottom: 1px solid #ddd;">
                        <h3 class="text-dark font-weight-bold mb-0">Staff Management</h3>
                    </div>
                    <div class="container-fluid mt-4">
                        <div class="row">
                            <div class="col-xl-12">
                                <div class="card shadow-sm">
                                    <div class="card-header bg-white border-0">
                                        <div class="row align-items-center">
                                            <div class="col-8">
                                                <h4 class="mb-0" style="color: #495057;">Staff Filter</h4>
                                            </div>
                                            <div class="col-4 text-right">
                                                <a href="/admin/getAllStaffs" class="btn btn-sm btn-outline-primary">All Staffs</a>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="card-body">
                                        <%- include('../../Includes/messages') %>

                                        <form action="/admin/getStaff" method="POST">
                                            <h6 class="heading-small text-muted mb-4" style="font-size: 1rem; color: #6c757d;">Filter Staff</h6>
                                            <div class="pl-lg-4">
                                                <div class="row">
                                                    <div class="col-lg-6">
                                                        <div class="form-group">
                                                            <label class="form-control-label" for="section" style="font-size: 0.9rem; color: #495057;">Section</label>
                                                            <input type="number" id="section" name="section"
                                                                class="form-control form-control-alternative"
                                                                placeholder="Enter section number" style="border-radius: 8px; border: 1px solid #ccc; padding: 10px;">
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-6">
                                                        <div class="form-group">
                                                            <label class="form-control-label" for="department" style="font-size: 0.9rem; color: #495057;">Department</label>
                                                            <select class="form-control" id="department" name="department"
                                                                style="border-radius: 8px; border: 1px solid #ccc; padding: 10px;">
                                                                <option value="None">None</option>
                                                                <% for(const department of departments) { %>
                                                                    <option value="<%= department %>"><%= department %></option>
                                                                <% } %>
                                                            </select>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <hr class="my-4" style="border-top: 1px solid #ddd;">
                                            <button type="submit" class="btn btn-primary btn-block" style="border-radius: 25px; padding: 12px; font-size: 1rem;">See Relevant Staffs</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </section>
    </div>
</div>

<%- include('../../Includes/admin_end.ejs') %>
