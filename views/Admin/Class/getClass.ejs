<%- include('../../Includes/begin.ejs') %>

<link rel="stylesheet" href="../../CSS/admin-dashboard.css">

<div class="container-fluid">

    <div id="wrapper">

        <%- include('../../Includes/admin_nav.ejs') %>

        <section id="content-wrapper">
            <main role="main" class="pt-5 main">

                <div class="main-content">
                    <!-- Header Section with Image Background -->
                    <div class="header pb-4 pb-sm-8 pt-5 pt-lg-8 d-flex align-items-center"
                        style="height: 150px; background: url('../../images/header-bg.jpg') no-repeat center center; background-size: cover; border-radius: 10px;">
                        <div class="text-center text-white w-100">
                            <h1 class="display-4">All Classes</h1>
                            <p class="lead">Manage your class details with ease</p>
                        </div>
                    </div>

                    <div class="container-fluid mt-5">
                        <div class="row">
                            <div class="col-xl-12 order-xl-1">
                                <div class="card bg-light shadow-lg border-0 rounded-lg">
                                    <div class="card-header bg-white border-0">
                                        <h3 class="mb-0 text-center" style="color: #4B8E8D;">All Classes</h3>
                                    </div>
                                    <div class="card-body">
                                        <%- include('../../Includes/messages') %>

                                        <!-- Search Bar -->
                                        <input class="form-control mb-4" id="searchInput" type="text"
                                            placeholder="Search Class" style="border-radius: 25px;">

                                        <!-- Department Information Table -->
                                        <h6 class="heading-small text-muted mb-4">Class Details</h6>
                                        <div class="table-responsive">
                                            <table class="table table-striped table-bordered table-hover">
                                                <thead class="thead-dark">
                                                    <tr>
                                                        <th scope="col">#</th>
                                                        <th scope="col">Course</th>
                                                        <th scope="col">Staff</th>
                                                        <th scope="col">Section</th>
                                                        <th scope="col">Manage Class</th>
                                                    </tr>
                                                </thead>
                                                <tbody id="classTable">
                                                    <% for(let i=0; i < data.length; i++) { %>
                                                    <tr>
                                                        <th scope="row"><%= data[i].class_id %></th>
                                                        <td><%= data[i].c_id %></td>
                                                        <td><%= staffData[i] %></td>
                                                        <td><%= data[i].section %></td>
                                                        <td><a href="/admin/settings/class/<%= data[i].class_id %>"
                                                                class="btn btn-sm btn-primary">Settings</a></td>
                                                    </tr>
                                                    <% } %>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

            </main>
        </section>

    </div>

</div>

<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
    integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous">
</script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
    integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous">
</script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
    integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous">
</script>

<script>
    const $button = document.querySelector('#sidebar-toggle');
    const $wrapper = document.querySelector('#wrapper');

    $button.addEventListener('click', (e) => {
        e.preventDefault();
        $wrapper.classList.toggle('toggled');
    });

    // Search functionality for the table
    $(document).ready(function () {
        $("#searchInput").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#classTable tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>

</body>

</html>
