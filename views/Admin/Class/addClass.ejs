<%- include('../../Includes/begin.ejs') %>

<link rel="stylesheet" href="../../CSS/admin-dashboard.css">

<div class="container-fluid">

    <div id="wrapper">

        <%- include('../../Includes/admin_nav.ejs') %>

        <section id="content-wrapper" class="bg-light">
            <main role="main" class="pt-5 main">

                <div class="main-content">
                    <!-- Header Section with Gradient Background -->
                    <!-- <div class="header pb-4 pb-sm-8 pt-5 pt-lg-8 d-flex align-items-center"
                        style="height: 150px; background: linear-gradient(135deg, #4B8E8D, #2a7a75); color: #fff; text-align: center; border-radius: 10px;">
                        <h1 class="display-4">Add New Class</h1>
                        <p class="lead">Create a new class and assign the relevant course and staff details</p>
                    </div> -->

                    <div class="container-fluid mt-5">
                        <div class="row">
                            <div class="col-xl-12 order-xl-1">
                                <div class="card shadow-lg border-light rounded-lg">
                                    <div class="card-header bg-white border-0">
                                        <h3 class="mb-0 text-center" style="color: #4B8E8D;">Add New Class</h3>
                                    </div>
                                    <div class="card-body">
                                        <%- include('../../Includes/messages') %>

                                        <!-- Form to Add Class -->
                                        <form action="/admin/addClass" method="POST">
                                            <h6 class="heading-small text-muted mb-4">Class Information</h6>
                                            
                                            <div class="pl-lg-4">
                                                <!-- Row 1: Staff Information -->
                                                <div class="row mb-4">
                                                    <div class="col-lg-12">
                                                        <div class="form-group">
                                                            <label class="form-control-label" for="staff">Staff <span
                                                                    style="font-size: 0.9rem; color: #6c757d;">(Mail ID of staff)</span></label>
                                                            <select class="form-control" id="staff" name="staff" required>
                                                                <% for(const staff of staffs) { %>
                                                                <option>
                                                                    <%= staff.email + " [" + staff.dept_id + "]"%>
                                                                </option>
                                                                <% } %>
                                                            </select>
                                                        </div>
                                                    </div>
                                                </div>

                                                <!-- Row 2: Course and Section -->
                                                <div class="row mb-4">
                                                    <div class="col-lg-6">
                                                        <div class="form-group">
                                                            <label class="form-control-label" for="course">Course</label>
                                                            <select class="form-control" id="course" name="course" required>
                                                                <% for(const course of courses) { %>
                                                                <option>
                                                                    <%= course %>
                                                                </option>
                                                                <% } %>
                                                            </select>
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-6">
                                                        <div class="form-group">
                                                            <label class="form-control-label" for="section">Section</label>
                                                            <input type="number" id="section" name="section"
                                                                class="form-control form-control-alternative"
                                                                placeholder="Section" required>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            <hr class="my-4" style="border-top: 1px solid #ddd;">
                                            <button type="submit" class="btn btn-success btn-block btn-lg">Add Class</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

            </main>
        </section>

    </div>

</div>

<%- include('../../Includes/admin_end.ejs') %>
