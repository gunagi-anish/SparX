<%- include('../Includes/begin.ejs') %>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/startbootstrap-sb-admin-2/4.1.3/css/sb-admin-2.css">
<link rel="stylesheet" href="../CSS/admin-dashboard.css">
<link rel="stylesheet" href="../CSS/admin-profile.css">

<div class="container-fluid">

    <div id="wrapper">

        <%- include('../Includes/admin_nav.ejs') %>

        <section id="content-wrapper">
            <main role="main" class="pt-3 main">
                <!-- Header -->
                <div class="header pb-6 pt-4 pt-lg-5 d-flex align-items-center"
                    style="min-height:250px; background-image: url(https://t4.ftcdn.net/jpg/02/00/98/83/240_F_200988374_2yXU7CUcLczABQ2geAhEGwAfgXbxqkZi.jpg); background-size: cover; background-position: center;">
                    <!-- Mask -->
                    <span class="mask bg-gradient-secondary opacity-8"></span>
                    <!-- Header container -->
                    <div class="container-fluid d-flex align-items-center">
                        <div class="row">
                            <div class="col-lg-7 col-md-10">
                                <h1 class="display-4 text-white" style="font-size: 1.8rem;">Hello <%= user.name %></h1>
                                <p class="text-white mt-0 mb-5" style="font-size: 1rem;">This is your profile page. You can see the data of your college and also manage your own profile.</p>
                                <a href="/admin/info_settings" class="btn btn-info btn-sm">Edit profile</a>
                            </div>
                        </div>
                    </div>
                </div>
                <hr>
                <!-- Statistics Cards -->
                <div class="row mb-4">
                    <!-- Students Card -->
                    <div class="col-sm-3">
                        <div class="card" style="box-shadow: 0 1rem 1.5rem 0 rgba(136, 152, 170, .15) !important;">
                            <div class="card-header bg-primary text-white" style="font-size: 0.9rem;">
                                <div class="col-xs-3">
                                    <i class="fa fa-book-reader fa-3x"></i>
                                </div>
                                <div class="col-xs-9 text-right">
                                    <div><%= students.length %></div>
                                    <div>Students</div>
                                </div>
                            </div>
                            <a href="/admin/getAllStudents">
                                <div class="card-footer bg-primary text-white" style="font-size: 0.8rem;">
                                    <span class="float-left">View Details</span>
                                    <span class="float-right"><i class="fa fa-arrow-circle-right"></i></span>
                                    <div class="clearfix"></div>
                                </div>
                            </a>
                        </div>
                    </div>
                    <!-- End of Students Card -->
                </div>

                <!-- Profile Section -->
                <div class="row mt-4">
                    <div class="col">
                        <div class="card card-profile shadow" style="border-radius: 10px;">
                            <div class="row justify-content-center">
                                <div class="col-lg-3 order-lg-2">
                                    <div class="card-profile-image">
                                        <a href="#">
                                            <img src="<%= user.profileImage || 'https://sammilanimahavidyalaya.org/wp-content/uploads/2016/01/student-icon.png' %>"
                                                class="rounded-circle" alt="Profile Image" style="width: 120px; height: 120px;">
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="card-header text-center border-0 pt-4 pb-3">
                                <div class="d-flex justify-content-between">
                                    <a href="#" class="btn btn-sm btn-info mr-4">Email Teachers</a>
                                    <a href="#" class="btn btn-sm btn-default float-right">Email Students</a>
                                </div>
                            </div>
                            <div class="card-body pt-0 pt-md-4">
                                <div class="text-center mt-4">
                                    <h3 style="font-size: 1.2rem;">
                                        <%= user.name %><span class="font-weight-light"></span>
                                    </h3>
                                    <div class="h6 font-weight-300" style="font-size: 0.9rem;">
                                        <i class="ni location_pin mr-2"></i>Adyar, Mangalore
                                    </div>
                                    <div class="h6 mt-2" style="font-size: 0.9rem;">
                                        <i class="ni business_briefcase-24 mr-2"></i>Administrator - SCEM
                                    </div>
                                    <div style="font-size: 0.9rem;">
                                        <i class="ni education_hat mr-2"></i>Sahyadri College of Engineering and Management
                                    </div>
                                    <hr class="my-3">
                                    <p style="font-size: 0.9rem;">
                                        Sahyadri College of Engineering and Management is dedicated to academic excellence, fostering innovation, and preparing students for a successful career in engineering.
                                    </p>
                                    <a href="#" style="font-size: 0.9rem;">Show more</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </section>
    </div>
</div>

<%- include('../Includes/admin_end.ejs') %>
