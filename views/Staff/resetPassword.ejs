<%- include('../Includes/begin.ejs') %>
<%- include('../Includes/navbar.ejs') %>

<div class="container pt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-sm mb-5 bg-white rounded">
                <div class="card-body">
                    <div class="forgot p-4">
                        <h2 class="text-center text-dark">Reset your password</h2>
                        <p class="text-center text-muted">Change your password. Make sure it's strong and secure!</p>
                        <p class="text-center text-warning">NOTE: The link will expire in 20 minutes</p>
                    </div>

                    <%- include('../Includes/messages') %>

                    <form class="card" role="form" method="POST" action="/student/resetpassword?_method=PUT">
                        <div class="card-body">
                            <div class="form-group">
                                <label for="password" class="font-weight-bold">Enter your new password</label>
                                <input class="form-control" type="password" name="password" id="password" required>
                                <small class="form-text text-muted">Enter a new password for your account.</small>
                            </div>
                            <div class="form-group">
                                <label for="confirm-password" class="font-weight-bold">Confirm your password</label>
                                <input class="form-control" type="password" name="confirmPass" id="confirmPass" required>
                                <small class="form-text text-muted">Re-enter your password for confirmation.</small>
                            </div>
                        </div>

                        <input type="hidden" class="hide" name="resetLink" id="resetLink" value="<%= resetLink %>">
                        <button class="btn btn-primary btn-block mt-3" type="submit">Change Password</button>
                    </form>

                    <hr>
                    <button class="btn btn-secondary btn-block" onclick="location.href = '/student/login'">Back to Login</button>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../Includes/end.ejs') %>

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f6f9;
        color: #495057;
    }

    .card {
        border: none;
        border-radius: 8px;
    }

    .card-body {
        padding: 30px;
    }

    .forgot h2 {
        font-size: 1.75rem;
        font-weight: 600;
    }

    .forgot p {
        font-size: 1rem;
        margin-bottom: 15px;
    }

    .forgot .text-warning {
        font-size: 0.95rem;
    }

    .form-control {
        font-size: 1rem;
        padding: 12px;
        border-radius: 5px;
    }

    .form-text {
        font-size: 0.85rem;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

    .btn-primary:hover {
        background-color: #0056b3;
        border-color: #0056b3;
    }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

    .btn-secondary:hover {
        background-color: #5a6268;
        border-color: #5a6268;
    }

    hr {
        border: 1px solid #e9ecef;
    }
</style>
