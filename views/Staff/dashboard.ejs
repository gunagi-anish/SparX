<%- include('../Includes/begin.ejs') %>
<%- include('../Includes/staff_nav.ejs') %>

<section id="content-wrapper">
    <main role="main" class="pt-5">
        <!-- Header Section -->
        <div class="header pb-4 pt-5 d-flex align-items-center justify-content-center" 
             style="background-color: #f8f9fa; color: #343a40;">
            <h1>Hello, <%= user.st_name %></h1>
        </div>

        <hr>

        <!-- Cards Section -->
        <div class="container">
            <div class="row">
                <!-- Mark Attendance Card -->
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-primary text-center">Mark Attendance</h5>
                            <p class="card-text text-muted text-center flex-grow-1">
                                Record the daily attendance of your students here! 
                                Note: Changes cannot be made after one month.
                            </p>
                            <div class="text-center">
                                <a href="/admin/addStaff" class="btn btn-primary">Mark Attendance</a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Student Report Card -->
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-success text-center">Student Report</h5>
                            <p class="card-text text-muted text-center flex-grow-1">
                                Manage your student's report (marks). All updates will be instantly visible to them.
                            </p>
                            <div class="text-center">
                                <a href="/admin/addStaff" class="btn btn-success">Student Report</a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Class Report Card -->
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-danger text-center">Generate Class Report</h5>
                            <p class="card-text text-muted text-center flex-grow-1">
                                Generate a comprehensive report of the class's overall performance (attendance/marks).
                            </p>
                            <div class="text-center">
                                <a href="/admin/addStaff" class="btn btn-danger">Class Report</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</section>

<%- include('../Includes/staff_end.ejs') %>
